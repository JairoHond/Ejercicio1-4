<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio1_4.Views.PageCrear"
             Title="PageCrear" BackgroundColor="Aqua">
    <ContentPage.Content>
        <StackLayout>
            <Image x:Name="Imagen" WidthRequest="100" HeightRequest="200" />

            <Button x:Name="btnfoto" Text="Capturar Imagen" Clicked="btnfoto_Clicked" />

            <Entry x:Name="descripcion" Placeholder="descripcion" MaxLength="100"  />

            <Button x:Name="btnguardar" Text="Guardar" Clicked="btnguardar_Clicked" BackgroundColor="Green" />
            <Button x:Name="btnlista" Text="Lista" Clicked="btnlista_Clicked" BackgroundColor="Aqua"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>